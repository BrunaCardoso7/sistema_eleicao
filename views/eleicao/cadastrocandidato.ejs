<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fornecedores</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.0/css/bulma.min.css">
    <link rel="stylesheet" href="/css/chapasCadastro.css">
</head>

<body>
    <header class="header">
        <div class="header-value">
           <!-- <button onclick="window.history.back()" class="button-left"> -->
              <i onclick="window.history.back()" class="fa-solid text-light fa-chevron-left button-left"></i>
           <!-- </button> -->
           <div class="logo-conteiner">
              <h2>Vota Aqui</h2>
              <i class="fa-solid  fa-puzzle-piece"></i>
           </div>
        </div>
     </header>
    <main>


        <div class="container">
            <h2>Cadastro de Candidatos</h2>
            <form action="/candidatos/" method="POST">
                <div>
                <div>
                    <label for="nome">Nome:</label>
                    <input   class="input is-link" type="text" id="nome" name="nome" placeholder="Insira o nome do candidato..." required><br>
                </div>
                <div>
                    <label for="local">CPF:</label>
                    <input   class="input is-link" type="text" id="cpf" name="cpf" placeholder="Insira o CPF do candidato..." required><br>
                </div>
                <div>
                    <label for="endereço">Endereço:</label>
                    <input   class="input is-link" type="text" id="endereço" name="endereco" placeholder="Insira endereço..." required><br>
                </div>
                <input type="number" id="eleicao_id" name="eleicao_id" value="<%= eleicaoId %>" required style="display: none;">
            </form>
            <div class="conteiner-button">
                <button class="button is-success" type="submit">Cadastrar</button>
                <a class="button is-info" href="/welcome">Cancelar</a>
            </div>
        </div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('cpf').addEventListener('input', function (e) {
                let value = e.target.value;
                value = value.replace(/\D/g, ''); // Remove qualquer caractere que não seja número
                value = value.replace(/(\d{3})(\d)/, '$1.$2'); // Adiciona um ponto após os primeiros 3 dígitos
                value = value.replace(/(\d{3})(\d)/, '$1.$2'); // Adiciona um ponto após os próximos 3 dígitos
                value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2'); // Adiciona um hífen antes dos últimos 2 dígitos
                e.target.value = value;
            });
        });
    </script>

</body>

</html>